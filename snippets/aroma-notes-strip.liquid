{%- comment -%}
  Strip של 3 תווים ארומטיים (ראש / לב / בסיס)
  – אייקון + שם התו בלבד, בלי כותרות ובלי תת-אינפורמציה.
{%- endcomment -%}

{%- assign prod_obj = prod | default: product -%}

{%- assign head_note_single   = prod_obj.metafields.custom.head_note.value   -%}
{%- assign middle_note_single = prod_obj.metafields.custom.middle_note.value -%}
{%- assign base_note_single   = prod_obj.metafields.custom.base_note.value   -%}

{%- if head_note_single or middle_note_single or base_note_single -%}
  <div class="aroma-strip">
    
    {%- if head_note_single -%}
      <div class="aroma-strip__item">
        {%- if head_note_single.note_image -%}
          <img
            src="{{ head_note_single.note_image | image_url: width: 80 }}"
            alt="{{ head_note_single.hebrew_name | default: head_note_single.title | default: head_note_single.name }}"
            class="aroma-strip__img"
          >
        {%- endif -%}
        <div class="aroma-strip__name">
          {{ head_note_single.hebrew_name | default: head_note_single.title | default: head_note_single.name }}
        </div>
      </div>
    {%- endif -%}

    {%- if middle_note_single -%}
      <div class="aroma-strip__item">
        {%- if middle_note_single.note_image -%}
          <img
            src="{{ middle_note_single.note_image | image_url: width: 80 }}"
            alt="{{ middle_note_single.hebrew_name | default: middle_note_single.title | default: middle_note_single.name }}"
            class="aroma-strip__img"
          >
        {%- endif -%}
        <div class="aroma-strip__name">
          {{ middle_note_single.hebrew_name | default: middle_note_single.title | default: middle_note_single.name }}
        </div>
      </div>
    {%- endif -%}

    {%- if base_note_single -%}
      <div class="aroma-strip__item">
        {%- if base_note_single.note_image -%}
          <img
            src="{{ base_note_single.note_image | image_url: width: 80 }}"
            alt="{{ base_note_single.hebrew_name | default: base_note_single.title | default: base_note_single.name }}"
            class="aroma-strip__img"
          >
        {%- endif -%}
        <div class="aroma-strip__name">
          {{ base_note_single.hebrew_name | default: base_note_single.title | default: base_note_single.name }}
        </div>
      </div>
    {%- endif -%}

  </div>
{%- endif -%}

<style>
  /* ריווח בתוך הסטריפ עצמו (העיגולים לא נחתכים למעלה) */
  .product__media-strip {
    padding-top: 20px;
    padding-bottom: 14px;
    padding-inline: 16px;
    box-sizing: border-box;

    display: flex;
    justify-content: center;
    align-items: center;

    /* אם יש לך כבר רקע/blur מה-CSS הכללי, אפשר להשאיר בלי רקע כאן */
  }

  .aroma-strip {
    display: flex;
    justify-content: center;
    align-items: flex-start;
    gap:50px;
    text-align: center;
  }

  .aroma-strip__item {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .aroma-strip__img {
    width: 52px;
    height: 52px;
    border-radius: 50%;
    object-fit: cover;
    margin-bottom: 4px;   /* רווח קטן בין העיגול לשם */
  }

  .aroma-strip__name {
    font-size: 13px;
    font-weight: 500;
    line-height: 1.3;
  }

  @media (max-width: 768px) {
    .product__media-strip {
      padding-top: 18px;
      padding-bottom: 10px;
      padding-inline: 10px;
    }

    .aroma-strip {
      gap: 16px;
    }

    .aroma-strip__img {
      width: 44px;
      height: 44px;
    }

    .aroma-strip__name {
      font-size: 12px;
    }
  }
</style>
