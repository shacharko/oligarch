              "label": "t:shared.settings.heading_font_class.options.small"
            },
            {
              "value": "fs-heading-display-2",
              "label": "t:shared.settings.heading_font_class.options.medium"
            },
            {
              "value": "fs-heading-display-1",
              "label": "t:shared.settings.heading_font_class.options.large"
            }
          ],
          "default": "fs-heading-display-3"
        }
      ]
    },
    {
      "type": "text",
      "name": "t:shared.section_blocks.text.name",
      "settings": [
        {
          "type": "richtext",
          "id": "text",
          "label": "t:shared.section_blocks.text.settings.text.label",
          "default": "t:sections.main_password.blocks.text.settings.text.default"
        },
        {
          "type": "select",
          "id": "text_font_class",
          "label": "t:shared.settings.text_font_class.label",
          "options": [
            {
              "value": "fs-body-75",
              "label": "t:shared.settings.text_font_class.options.small"
            },
            {
              "value": "fs-body-100",
              "label": "t:shared.settings.text_font_class.options.regular"
            },
            {
              "value": "fs-body-200",
              "label": "t:shared.settings.text_font_class.options.large"
            }
          ],
          "default": "fs-body-100"
        }
      ]
    },
    {
      "type": "newsletter_signup",
      "name": "t:sections.main_password.blocks.newsletter_signup.name",
      "limit": 1,
      "settings": [
        {
          "type": "checkbox",
          "id": "enable_collect_customer_name",
          "label": "t:shared.options.enable_collect_customer_name.label",
          "info": "t:shared.options.enable_collect_customer_name.info",
          "default": false
        }
      ]
    },
    {
      "type": "spacer",
      "name": "t:shared.section_blocks.spacer.name",
      "settings": [
        {
          "type": "range",
          "id": "space",
          "label": "t:shared.section_blocks.spacer.settings.space.label",
          "min": 4,
          "max": 64,
          "step": 4,
          "unit": "px",
          "default": 12
        }
      ]
    },
    {
      "type": "share_icons",
      "name": "t:sections.main_password.blocks.share_icons.name",
      "limit": 1
    },
    {
      "type": "social_icons",
      "name": "t:shared.section_blocks.social_icons.name",
      "limit": 1,
      "settings": [
        {
          "type": "paragraph",
          "content": "t:shared.section_blocks.social_icons.settings.paragraph.content"
        }
      ]
    }
  ]
}
