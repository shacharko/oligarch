{%- liquid
  assign has_background_color = false

  if section.settings.background_color != blank and section.settings.background_color != 'rgba(0,0,0,0)'
    assign has_background_color = true
  endif
-%}

{%- capture section_classes -%}
  section section--divider-{{ section.settings.divider_style }}
  {{ section.settings.section_padding }}
{%- endcapture -%}

{% capture prev_nav_button %}
  {%- if section.blocks.size > 1 -%}
    <div class="testimonials__navigation-button-wrapper testimonials__navigation-button-wrapper--prev">
      <button
        type="button"
        class="testimonials__navigation-button testimonials__navigation-button--prev"
        aria-label="{{ 'general.accessibility.carousel_previous' | t }}"
      >
        {%- render 'icon' with icon: 'chevron' -%}
      </button>
    </div>
  {%- endif -%}
{% endcapture %}

{% capture next_nav_button %}
  {%- if section.blocks.size > 1 -%}
    <div class="testimonials__navigation-button-wrapper testimonials__navigation-button-wrapper--next">
      <button
        type="button"
        class="testimonials__navigation-button testimonials__navigation-button--next"
        aria-label="{{ 'general.accessibility.carousel_next' | t }}"
      >
        {%- render 'icon' with icon: 'chevron' -%}
      </button>
    </div>
  {%- endif -%}
{% endcapture %}

<div
  data-section-id="{{ section.id }}"
  data-section-type="testimonials"
  class="
    testimonials
    {% if has_background_color %}
      testimonials--has-background
    {% endif %}
    {% unless has_background_color %}
      {{ section_classes }}
    {% endunless %}
    {% if settings.enable_section_animations and section.settings.enable_animation %}
      animation
      animation--testimonials
    {% endif %}
  "
  style="
    {% if has_background_color %}
      --section-background-color: {{ section.settings.background_color }};
    {% endif %}
    --color-text-section: {{ section.settings.text_color }};
    --nav-box-shadow-1: {{ settings.color_text | color_modify: 'alpha', 0.09 }};
    --nav-box-shadow-2: {{ settings.color_text | color_modify: 'alpha', 0.14 }};
  "
  data-block-count="{{ section.blocks.size }}"
>
  <div
    class="
      testimonials__inner
      {% if has_background_color %}
        {{ section_classes }}
      {% endif %}
    "
  >
    <div class="testimonails__carousel swiper">
      {{ prev_nav_button }}

      <div class="testimonials__items-wrapper swiper-wrapper">
        {%- for block in section.blocks -%}
          {%-
            render 'testimonials-item' with
            block: block,
            forloop: forloop,
            image_size: section.settings.image_size,
            quote_font: section.settings.quote_font
          -%}
        {%- endfor -%}
      </div>

      {{ next_nav_button }}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "t:sections.testimonials.name",
  "tag": "section",
  "disabled_on": {
    "groups": [
      "header",
      "custom.overlay"
    ],
    "templates": [
      "password"
    ]
  },
  "settings": [
    {
      "type": "select",
      "id": "image_size",
      "label": "t:sections.testimonials.settings.image_size.label",
      "options": [
        {
          "value": "small",
          "label": "t:sections.testimonials.settings.image_size.options.small"
        },
        {
          "value": "medium",
          "label": "t:sections.testimonials.settings.image_size.options.medium"
        },
        {
          "value": "large",
          "label": "t:sections.testimonials.settings.image_size.options.large"
        }
      ]
    },
    {
      "type": "select",
      "id": "quote_font",
      "label": "t:sections.testimonials.settings.quote_font.label",
      "options": [
        {
          "value": "heading",
          "label": "t:sections.testimonials.settings.quote_font.options.heading"
        },
        {
          "value": "body",
          "label": "t:sections.testimonials.settings.quote_font.options.body"
        }
      ]
    },
    {
      "type": "header",
      "content": "t:shared.settings.color.header.content"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "t:shared.settings.color.general.background.label"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "t:shared.settings.color.general.text.label",
      "default": "#000000"
    },
    {
      "type": "header",
      "content": "t:shared.settings.section_style.header.content"
    },
    {
      "type": "checkbox",
      "id": "enable_animation",
      "label": "t:shared.settings.section_style.enable_animation.label",
      "default": true,
      "info": "t:shared.settings.section_style.enable_animation.info"
    },
    {
      "type": "select",
      "id": "divider_style",
      "label": "t:shared.settings.section_style.divider_style.label",
      "options": [
        {
          "value": "none",
          "label": "t:shared.settings.section_style.divider_style.options.none"
        },
        {
          "value": "solid",
          "label": "t:shared.settings.section_style.divider_style.options.solid"
        }
      ],
      "default": "none"
    },
    {
      "type": "select",
      "id": "section_padding",
      "label": "t:shared.settings.section_style.section_padding.label",
      "options": [
        {
          "value": "section--vertical-padding-none",
          "label": "t:shared.settings.section_style.section_padding.options.none"
        },
        {
          "value": "section--vertical-padding-top-bottom",
          "label": "t:shared.settings.section_style.section_padding.options.both"
        },
        {
          "value": "section--vertical-padding-top-only",
          "label": "t:shared.settings.section_style.section_padding.options.top"
        },
        {
          "value": "section--vertical-padding-bottom-only",
          "label": "t:shared.settings.section_style.section_padding.options.bottom"
        }
      ],
      "default": "section--vertical-padding-top-bottom"
    }
  ],
  "blocks": [
    {
      "type": "testimonial",
      "name": "t:sections.testimonials.blocks.testimonial.name",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "t:sections.testimonials.blocks.testimonial.settings.product.label"
        },
        {
          "type": "select",
          "id": "image_position",
          "label": "t:sections.testimonials.blocks.testimonial.settings.image_position.label",
          "options": [
            {
              "value": "left",
              "label": "t:sections.testimonials.blocks.testimonial.settings.image_position.options.left"
            },
            {
              "value": "right",
              "label": "t:sections.testimonials.blocks.testimonial.settings.image_position.options.right"
            }
          ],
          "default": "right"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "t:sections.testimonials.blocks.testimonial.settings.image.label"
        },
        {
          "type": "select",
          "id": "aspect_ratio",
          "label": "t:sections.testimonials.blocks.testimonial.settings.aspect_ratio.label",
          "options": [
            {
              "value": "natural",
              "label": "t:shared.options.aspect_ratio.natural"
            },
            {
              "value": "square",
              "label": "t:shared.options.aspect_ratio.square"
            },
            {
              "value": "portrait",
              "label": "t:shared.options.aspect_ratio.portrait"
            },
            {
              "value": "landscape",
              "label": "t:shared.options.aspect_ratio.landscape"
            }
          ],
          "default": "square"
        },
        {
          "type": "select",
          "id": "focal_point",
          "label": "t:shared.settings.focal_point.image.default.label",
          "options": [
            {
              "value": "image_presentation",
              "label": "t:shared.options.focal_point.image_presentation"
            },
            {
              "value": "center",
              "label": "t:shared.options.focal_point.center"
            },
            {
              "value": "top",
              "label": "t:shared.options.focal_point.top"
            },
            {
              "value": "bottom",
              "label": "t:shared.options.focal_point.bottom"
            },
            {
              "value": "left",
              "label": "t:shared.options.focal_point.left"
            },
            {
              "value": "right",
              "label": "t:shared.options.focal_point.right"
            }
          ],
          "default": "image_presentation"
        },
        {
          "type": "header",
          "content": "t:sections.testimonials.blocks.testimonial.settings.product_rating.header.content"
        },
        {
          "type": "checkbox",
          "id": "show_rating",
          "label": "t:sections.testimonials.blocks.testimonial.settings.product_rating.show_rating.label",
          "default": true
        },
        {
          "type": "range",
          "id": "rating",
          "label": "t:sections.testimonials.blocks.testimonial.settings.product_rating.rating.label",
          "min": 3,
          "max": 5,
          "step": 0.5,
          "default": 5
        },
        {
          "type": "header",
          "content": "t:sections.testimonials.blocks.testimonial.settings.testimonial.header.content"
        },
        {
          "type": "text",
          "id": "quote",
          "label": "t:sections.testimonials.blocks.testimonial.settings.testimonial.quote.label",
          "default": "t:sections.testimonials.blocks.testimonial.settings.testimonial.quote.default"
        },
        {
          "type": "text",
          "id": "author",
          "label": "t:sections.testimonials.blocks.testimonial.settings.testimonial.author.label",
          "default": "t:sections.testimonials.blocks.testimonial.settings.testimonial.author.default"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "t:sections.testimonials.presets.name",
      "blocks": [
        {
          "type": "testimonial"
        },
        {
          "type": "testimonial"
        },
        {
          "type": "testimonial"
        }
      ]
    }
  ]
}
{% endschema %}
