<style>
/* צבע הכיתוב – לבן כברירת מחדל, וניתן לשינוי מהעורך (text_color) */
.image-hero__text-container-heading.ff-heading,
.image-hero__text-container-text.rte p,
.image-hero__text-container-accent.ff-subheading {
    color: {{ section.settings.text_color }} !important;
    -webkit-text-fill-color: {{ section.settings.text_color }} !important;
    text-shadow: none;
}

/* מאפס את ריפוד הטקסט שהוספנו כדי להוריד אותו ומחזיר את הגובה המקורי */
.image-hero__text-container-inner {
    padding-top: 0 !important;
    height: 100%; /* וודא שהוא תופס את כל הגובה הזמין כדי שהיישור האנכי יעבוד */
}

/* מבטיח שהטקסט מיושר למרכז (לפי הגדרות המעצב) */
.image-hero__text-container {
    display: flex;
    align-items: var(--text-vertical-position);
    justify-content: var(--text-horizontal-position);
    text-align: var(--text-horizontal-position-modifier);
    height: 100%;
    width: 100%;
    flex-direction: column; /* כדי שהבלוקים יהיו אחד מתחת לשני */
    padding-left: 20px; /* ריפוד קל משמאל כדי שלא ידבק לקצה */
    padding-right: 20px; /* ריפוד קל מימין */
}

/* עוטף את כל ה-Hero - Position relative עבור מיקום מוחלט של האייקון */
.image-hero__inner {
    position: relative;
    width: 100%;
    height: 100%;
    overflow: hidden;
}

/* קונטיינר לאייקון המזל - שליש ימני */
.image-hero__zodiac-icon-absolute {
    position: absolute;
    top: 0;
    right: 0;
    width: 33.33%; /* תופס שליש מהרוחב */
    height: 100%;
    display: flex;
    justify-content: center; /* ממקם את האייקון במרכז אופקית בתוך השליש הימני */
    align-items: center; /* ממקם את האייקון במרכז אנכית בתוך השליש הימני */
    z-index: 2; /* וודא שהוא מעל שכבת התמונה הראשית */
}

.image-hero__zodiac-icon-absolute img {
    max-width: 80%; /* גודל האייקון בתוך השליש */
    max-height: 80%;
    object-fit: contain;
    filter: drop-shadow(0 0 10px rgba(0,0,0,0.5));
}

/* שכבת Overlay שתכסה גם את אייקון המזל, כדי לוודא שקיפות וגוון אחיד */
.image-hero__overlay {
    z-index: 1; /* וודא שהוא מתחת לאייקון המזל */
}

/* התאמה למובייל */
@media screen and (max-width: 768px) {
    /* נחזיר את האייקון למיקום טבעי יותר במובייל, למשל מעל הטקסט */
    .image-hero__zodiac-icon-absolute {
        position: static; /* מבטל מיקום מוחלט */
        width: 100%; /* תופס את כל הרוחב */
        height: auto;
        padding-top: 20px;
        padding-bottom: 20px;
        background-color: transparent; /* מסיר רקע אם היה */
    }
    .image-hero__zodiac-icon-absolute img {
        width: 80px; /* גודל סביר במובייל */
        height: 80px;
    }

    /* הטקסט במובייל ישאר במרכז ויתאים את עצמו */
    .image-hero__text-container-wrapper {
        position: static; /* מבטל מיקום מוחלט */
        width: 100%;
        height: auto;
        padding-top: 20px;
        padding-bottom: 20px;
    }
}
</style>

<div
  class="
    image-hero
    image-hero--image-aspect-{{ section.settings.image_aspect }}
    image-hero--text-{{ text_position_modifier }}
    image-hero--text-mobile-{{ text_position_modifier_mobile }}
    section
    section--full-width
    {{ section.settings.section_padding }}
    {% if settings.enable_section_animations and section.settings.enable_animation %}
      animation
      animation--image-hero
    {% endif %}
  "
  data-section-id="{{ section.id }}"
  data-section-type="image-hero"
  style="
    --custom-height: {{ section.settings.desktop_height }}vh;
    --custom-height-mobile: {{ section.settings.mobile_height }}vh;
    --text-horizontal-position: {{ horizontal_position }};
    --text-vertical-position: {{ vertical_position }};
    --text-horizontal-position-mobile: {{ horizontal_position_mobile }};
    --text-vertical-position-mobile: {{ vertical_position_mobile }};
    --color-text: {{ section.settings.text_color }};
    --color-text-link: {{ section.settings.text_color }};
    --overlay-background: {{ section.settings.color_overlay }};
    {% if section.settings.color_overlay_gradient != blank %}
      --overlay-background-gradient: {{ section.settings.color_overlay_gradient }};
    {% endif %}
    --overlay-opacity: {{ overlay_opacity }};
    {% render 'overlay-button-vars' with color_button_text: section.settings.button_text_color, color_button_background: section.settings.button_background_color %}
  "
>
  <div class="image-hero__inner">
    
    {# תמונת הרקע הראשית (של הבשמים) לכל ה-Hero #}
    <div class="image-hero__image-container">
      {%- if section.settings.image_mobile != blank -%}
        {%- render 'image' with
          wrapper_class: "image-hero__image image-hero__image--mobile",
          image: section.settings.image_mobile,
          sizes: "100vw",
          focal_point: section.settings.mobile_focal_point,
          placeholder_name: "lifestyle-2",
          animate: true,
          src_set_type: "full-width",
          prioritize_loading: prioritize_loading
        -%}
      {%- endif -%}

      {%- render 'image' with
        wrapper_class: "image-hero__image",
        image: section.settings.image,
        sizes: "100vw",
        focal_point: section.settings.focal_point,
        include_placeholder: true,
        placeholder_natural_fallback_ratio: placeholder_aspect_ratio,
        placeholder_name: "lifestyle-2",
        animate: true,
        src_set_type: "full-width",
        prioritize_loading: prioritize_loading
      -%}
    </div>
    
    {# שכבת Overaly מעל תמונת הרקע #}
    <div class="image-hero__overlay"></div>

    {# אייקון המזל במיקום מוחלט - שליש ימני #}
    <div class="image-hero__zodiac-icon-absolute">
        <img 
            src="{{ zodiac_icon_url }}" 
            alt="{{ current_sign_he }}" 
            loading="lazy"
        >
    </div>

    {# טקסט המזל - ממוקם ב-absolute מעל תמונת הרקע, בחלק השמאלי #}
    <div class="image-hero__text-container-wrapper">
      <div class="image-hero__text-container">
        {%- unless section.settings.media_link == blank -%}
          <a
            href="{{ section.settings.media_link }}"
            class="image-hero__image-link"
            aria-label="{{ section.settings.media_link }}"
          ></a>
        {%- endunless -%}

        <div class="image-hero__text-container-inner section-blocks animation--section-blocks">
          {%- for block in section.blocks -%}
            {%- case block.type -%}
              {%- when 'accent' -%}
                {%- unless block.settings.accent == blank -%}
                  <p class="image-hero__text-container-accent ff-subheading fs-heading-4-base section-blocks__accent">
                    {{ block.settings.accent }}
                  </p>
                {%- endunless -%}
              {%- when 'heading' -%}
                {% if current_sign_he != blank %}
                  <h2 class="image-hero__text-container-heading ff-heading {{ block.settings.heading_font_class }} section-blocks__heading">
                    מזל החודש: {{ current_sign_he }}
                  </h2>
                {% else %}
                  {%- unless block.settings.title == blank -%}
                    <{{ block.settings.heading_tag }} class="image-hero__text-container-heading ff-heading {{ block.settings.heading_font_class }} section-blocks__heading">
                      {{ block.settings.title }}
                    </{{ block.settings.heading_tag }}>
                  {%- endunless -%}
                {% endif %}
              {%- when 'subheading' -%}
                {%- unless block.settings.subheading == blank -%}
                  <{{ block.settings.subheading_tag }} class="image-hero__text-container-subheading ff-subheading {{ block.settings.subheading_font_class }} section-blocks__subheading">
                    {{ block.settings.subheading }}
                  </{{ block.settings.subheading_tag }}>
                {%- endunless -%}
              {%- when 'text' -%}
                {% if current_dates != blank %}
                  <div class="image-hero__text-container-text rte ff-body {{ block.settings.text_font_class }} section-blocks__text">
                    <p>{{ current_dates }}</p>
                  </div>
                {% else %}
                  {%- unless block.settings.text == blank -%}
                    <div class="image-hero__text-container-text rte ff-body {{ block.settings.text_font_class }} section-blocks__text">
                      {{ block.settings.text }}
                    </div>
                  {%- endunless -%}
                {% endif %}
              {%- when 'image' -%}
                {%- render 'image-block' with
                  shopify_attributes: block.shopify_attributes,
                  wrapper_class: 'image-hero__text-container-image  section-blocks__image',
                  image: block.settings.image,
                  width: block.settings.image_size,
                  mobile_width: block.settings.image_size_mobile,
                  break_to_mobile_at: '480',
                  align: text_position_modifier,
                  align_mobile: text_position_modifier_mobile
                -%}
              {%- when 'button' -%}
                {% assign button_link = block.settings.link %}
                {% assign button_label = block.settings.link_text %}

                {% if current_collection_handle != blank %}
                  {% assign button_link = routes.collections_url | append: '/' | append: current_collection_handle %}
                  {% assign button_label = 'גלו את בושם ' | append: current_sign_he | default: button_label %}
                {% endif %}

                {%- render 'button-block' with
                  shopify_attributes: block.shopify_attributes,
                  wrapper_class: "image-hero__text-container-image-button section-blocks__button",
                  link: button_link,
                  label: button_label,
                  button_style: block.settings.button_style,
                  is_overlay: true,
                  button_alignment: text_position_modifier,
                  button_alignment_mobile: text_position_modifier_mobile,
                  buttons_can_inline: true,
                  forloop: forloop
                -%}
              {%- when 'play-button' -%}
                {%- render 'play-button-block' with
                  wrapper_class: 'image-hero__text-container-image-play-button section-blocks__video-button',
                  block: block,
                  button_alignment: text_position_modifier,
                  button_alignment_mobile: text_position_modifier_mobile
                -%}
              {%- when 'border' -%}
                {%- render 'border-block' with shopify_attributes: block.shopify_attributes -%}
              {%- when 'spacer' -%}
                {%- render 'spacer-block' with space: block.settings.space, shopify_attributes: block.shopify_attributes -%}
            {%- endcase -%}
          {%- endfor -%}
        </div>
      </div>
    </div>
  </div>
</div>

