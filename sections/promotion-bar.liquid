      "options": [
        {
          "value": "btn--primary",
          "label": "t:shared.settings.button_style.options.solid"
        },
        {
          "value": "btn--secondary",
          "label": "t:shared.settings.button_style.options.outline"
        },
        {
          "value": "btn--callout",
          "label": "t:shared.settings.button_style.options.text"
        }
      ],
      "default": "btn--secondary"
    },
    {
      "type": "header",
      "content": "t:sections.shared.promo_sale.settings.background_image.header.content"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "t:sections.shared.promo_sale.settings.background_image.image.label"
    },
    {
      "type": "image_picker",
      "id": "mobile_image",
      "label": "t:sections.shared.promo_sale.settings.background_image.mobile_image.label"
    },
    {
      "type": "select",
      "id": "focal_point",
