</div>

<style>
  .whatsapp-float {
    position: fixed;
    right: 18px;   /* אם תרצי שמאל – החליפי ל: left: 18px; */
    bottom: 18px;
    z-index: 9999;
  }

  .whatsapp-float a {
    width: 56px;
    height: 56px;
    border-radius: 50%;
    background: #25D366;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 8px 18px rgba(0,0,0,0.35);
    text-decoration: none;
    transition: transform 0.18s ease, box-shadow 0.18s ease, background 0.18s ease;
  }

  .whatsapp-float a:hover {
    transform: translateY(-2px) scale(1.03);
    box-shadow: 0 12px 24px rgba(0,0,0,0.4);
    background: #1ebe5c;
  }

  .whatsapp-float__icon {
    width: 60%;
    height: 60%;
    fill: #ffffff;
    display: block;
  }

  /* התאמת גודל למובייל אם רוצים קצת יותר קטן */
  @media (max-width: 768px) {
    .whatsapp-float a {
      width: 52px;
      height: 52px;
      box-shadow: 0 6px 14px rgba(0,0,0,0.35);
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    var link = document.getElementById('whatsapp-float-link');
    if (!link) return;

    // *** פה לעדכן למספר שלך ***
    var phoneNumber = '970523311312'; // בלי 0 בהתחלה, בלי רווחים / מקפים

    var defaultText = 'היי, יש לי שאלה לגבי ' + window.location.href;
    var waUrl = 'https://wa.me/' + phoneNumber + '?text=' + encodeURIComponent(defaultText);

    link.setAttribute('href', waUrl);
  });
</script>

